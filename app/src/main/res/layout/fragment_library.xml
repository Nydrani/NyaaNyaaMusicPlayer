<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:name="@+id/fragment_library_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_library_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fragment_library_bottom_bar">

        <android.support.design.widget.TabLayout
            android:id="@+id/fragment_library_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/fragment_library_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"
        android:gravity="center" />

</RelativeLayout>
